{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
      },
      "eslint.options": {
        "--ext": ".js", 
        "--ignore-path": ".gitignore"
      },
      "eslint.validate": ["javascript"],
      "eslint.enable": true,
      "eslint.probe": [
        "javascript",
        "typescript",
        "html",
        "markdown"
      ]
}